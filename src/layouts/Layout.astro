---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="LOU - The Cutest Dog on Solana" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&family=Comic+Neue:wght@700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  .hero-title {
    font-family: 'Fredoka', cursive;
    letter-spacing: 0.05em;
  }

  .banner-text, .wallet-text {
    font-family: 'Comic Neue', cursive;
  }

  /* Wiggle animation for headline */
  @keyframes wiggle {
    0%, 100% {
      transform: rotate(0deg) scale(1);
    }
    25% {
      transform: rotate(-3deg) scale(1.05);
    }
    75% {
      transform: rotate(3deg) scale(1.05);
    }
  }

  .animate-wiggle {
    animation: wiggle 2s ease-in-out infinite;
    display: inline-block;
  }

  /* Scroll animations */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .animate-scroll {
    animation: scroll 20s linear infinite;
  }

  @keyframes scrollHorizontal {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll-horizontal {
    animation: scrollHorizontal 40s linear infinite;
    will-change: transform;
  }

  /* Drop in animation */
  @keyframes drop-in {
    0% {
      transform: translateY(-100vh);
      opacity: 0;
    }
    70% {
      transform: translateY(10%);
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .animate-drop-in {
    opacity: 0;
    animation: drop-in 1s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  /* Float animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(90deg);
    }
    50% {
      transform: translateY(-20px) rotate(90deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Button bounce animation */
  @keyframes bounce-button {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-6px);
    }
  }

  .animate-bounce-button {
    animation: bounce-button 2s ease-in-out infinite;
    will-change: transform;
  }

  /* Animation delays */
  .animation-delay-200 {
    animation-delay: 0.8s;
  }

  .animation-delay-400 {
    animation-delay: 1s;
  }

  .animation-delay-600 {
    animation-delay: 1.2s;
  }
</style>